!!! 5
%html{lang: 'en-US'}
  %head
    %title Pair Programming Partnership
    = csrf_meta_tags
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag 'custom.min'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body{class: page_class}
    .navbar.navbar-toggleable-md.fixed-top.navbar-inverse.bg-primary
      %button.navbar-toggler{navbar_button_attributes}
        %span.navbar-toggler-icon
      .container
        #navbarResponsive.collapse.navbar-collapse
          = link_to 'P<sub>3</sub>'.html_safe, root_path, class: 'navbar-brand'
          %ul.navbar-nav
            %li.nav-item.dropdown
              = link_to 'Get Started <span class="caret"></span>'.html_safe, '#', id: 'TODO', class: 'nav-link dropdown-toggle', 'data-toggle': 'dropdown'
              .dropdown-menu{'aria-labelledby': 'TODO'}
                = link_to 'Students', page_path('students'), class: 'dropdown-item'
                = link_to 'Pro Developers', page_path('developers'), class: 'dropdown-item'
                = link_to 'Businesses', page_path('businesses'), class: 'dropdown-item'
                = link_to 'Schools', page_path('schools'), class: 'dropdown-item'
            %li.nav-item
              = link_to 'Why?', '#', class: 'nav-link'
            %li.nav-item
              = link_to 'How it Works', '#', class: 'nav-link'
            %li.nav-item
              = link_to 'Expectations', '#', class: 'nav-link'
            %li.nav-item.dropdown
              = link_to 'About <span class="caret"></span>'.html_safe, '#', id: 'menu_about', class: 'nav-link dropdown-toggle', 'data-toggle': 'dropdown'
              .dropdown-menu{'aria-labelledby': 'menu_about'}
                = link_to 'About the Pair Programming Partnership', page_path('about/index'), class: 'dropdown-item'
                .dropdown-divider
                = link_to 'The Problem', '#', class: 'dropdown-item'
                = link_to 'Pair Programming?', '#', class: 'dropdown-item'
                = link_to 'Research & Evidence', '#', class: 'dropdown-item'
                = link_to 'Support', '#', class: 'dropdown-item'
                = link_to 'Contact', '#', class: 'dropdown-item'
          %ul.nav.navbar-nav.ml-auto
            %li.nav-item
              = link_to 'Support/Contact', 'https://pairprogpartnership.freshdesk.com', class: 'nav-link'
            %li.nav-item
              = link_to 'Dashboard (calendar etc)', '#', class: 'nav-link'
    .container
      #banner.page-header
        .row
          .col-lg-8.col-md-7.col-sm-6
            = yield :page_header
      %main
        = yield
      %footer#footer
        .row
          .col-lg-12
            %ul.list-unstyled
              %li.float-lg-right= link_to 'Dashboard', '#'
              %li.float-lg-right= link_to 'Support/Contact', 'https://pairprogpartnership.freshdesk.com'
              %li= link_to 'Students', page_path('students')
              %li= link_to 'Developers', page_path('developers')
              %li= link_to 'Businesses', page_path('businesses')
              %li= link_to 'Schools', page_path('schools')
              %li= link_to 'About', page_path('about/index')
